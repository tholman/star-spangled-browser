{
  "manifest_version": 2,

  "name": "Star Spangled Browser",
  "description": "The word America has never been so fun.",
  "version": "1.0.1",

  "icons": { 
    "48":  "./assets/icons/48.png",
    "128": "./assets/icons/128.png"
  },

  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [ "https://*/*", "http://*/*" ],
      "css": [ "./css/styles.css" ]
    }
  ],

 "web_accessible_resources": [
    "assets/*",
    "css/*"
  ],

  "background": {
    "scripts": [ "./js/init.js" ],
    "persistent": true
  }
}