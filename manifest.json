{
  "manifest_version": 2,

  "name": "Star Spangled Browser",
  "description": "The word America has never been so fun.",
  "version": "1.0",

  // All urls, & tabs
  "permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost/*",
    "tabs"
  ],

 "web_accessible_resources": [
    "assets/*",
    "css/*"
  ],

  "background": {
    "scripts": [ "./js/init.js" ],
    "persistent": false
  }
}